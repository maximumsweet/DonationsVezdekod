<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeActivity"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="MissingConstraints"
        app:contentInsetStart="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:paddingEnd="24sp"
                android:paddingBottom="12sp">
                <ImageView
                    android:layout_width="10.8dp"
                    android:layout_height="19.8dp"
                    android:src="@drawable/ic_back"
                    android:layout_marginStart="12.6dp"
                    android:layout_marginTop="4sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="4sp"
                    android:fontFamily="@font/ttcommons"
                    android:lineSpacingExtra="1sp"
                    android:text="Тип сбора"
                    android:textColor="#000000"
                    android:textSize="21sp"
                    android:translationY="-0.7sp"
                    app:lineHeight="26sp" />

                <View
                    android:layout_width="351dp"
                    android:layout_height="0.33dp"
                    android:layout_marginTop="13.5dp"
                    android:background="@color/colorSeparator" />
        </LinearLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_vk_btn"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sfpro"
            android:textSize="15sp"
            android:lineHeight="20dp"
            android:lineSpacingExtra="2sp"
            android:textAllCaps="false"
            android:clickable="true"
            android:onClick="target">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_hit"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".85"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="14dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro"
                    android:text="Целевой сбор"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    app:lineHeight="20sp"
                    android:textFontWeight="600"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro"
                    android:text="Когда есть определённая цель"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    app:lineHeight="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:layout_width="9.5dp"
                    android:layout_height="16.5dp"
                    android:src="@drawable/ic_chevron"
                    android:layout_gravity="center"
                    android:layout_marginEnd="22.75dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_vk_btn"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sfpro"
            android:textSize="15sp"
            android:lineHeight="20dp"
            android:lineSpacingExtra="2sp"
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_marginTop="12dp"
            android:onClick="regular">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".85"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="14dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro"
                    android:text="Регулярный сбор"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    app:lineHeight="20sp"
                    android:textFontWeight="600" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro"
                    android:text="Если помощь нужна ежемесячно"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    app:lineHeight="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:layout_width="9.5dp"
                    android:layout_height="16.5dp"
                    android:src="@drawable/ic_chevron"
                    android:layout_gravity="center"
                    android:layout_marginEnd="22.75dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>