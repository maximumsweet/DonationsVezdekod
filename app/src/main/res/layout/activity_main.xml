<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="MissingConstraints"
        app:contentInsetStart="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/ttcommons"
                android:lineSpacingExtra="1sp"
                android:text="Пожертвования"
                android:textColor="#000000"
                android:textSize="21sp"
                android:translationY="-0.7sp"
                app:lineHeight="26sp" />

            <View
                android:layout_width="351dp"
                android:layout_height="0.33dp"
                android:layout_marginTop="13.5dp"
                android:background="@color/colorSeparator" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="У Вас пока нет сборов.\nНачните доброе дело."
            android:fontFamily="@font/sfpro"
            android:lineSpacingExtra="1sp"
            android:textAlignment="center"
            android:textColor="#818C99"/>

        <Button
            android:layout_width="133dp"
            android:layout_height="36dp"
            android:layout_marginTop="24sp"
            android:background="@drawable/blue_vk_btn"
            android:text="Создать сбор"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sfpro"
            android:textSize="15sp"
            android:lineHeight="20dp"
            android:lineSpacingExtra="2sp"
            android:textAllCaps="false"
            android:onClick="next"
            android:textFontWeight="500"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>